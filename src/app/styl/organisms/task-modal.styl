
/* MODAL */
.blocked
  width 100%

.half-blocked
  width 50%

.icon-button-load
  font-size 16px

.task-fields-modal
  .panel-title
    height 20px
  span[data-toggle]
    width 90%
    position absolute



.task-fields-modal
  .panel-heading
    background #fff
    .toolbar--title
      font-weight 600
      font-size 15px
      color #888
      letter-spacing 0


.task-fields-modal
  .panel-body
    border: none
    label
      color #888
    .form-group
      label
        font-weight normal


.button-switch-parallel
  background #f00

.task-fields-modal
  input[type="radio"]
    & + label
      border 1px solid #aaa
      padding 4px 7px
      margin 0
      background #eaeaea
      cursor pointer

.task-fields-modal
  input[type="radio"]:checked
    & + label
      background #005672
      color #fff

.button-switch-parallel
    & + label
        &:nth-child(2)
            border-radius: 5px 0 0 5px
            margin-right -5px!important

.button-switch-sequence
    & + label
        &:nth-child(4)
            border-radius: 0 5px 5px 0

.txt-center
  text-align center
  display block
  float right
  padding 7px 10px 0 0

.switch-case
  padding-top 15px

.txtbuttonload
  position relative
  top -2px
