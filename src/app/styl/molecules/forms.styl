.form-control
  margin-bottom 15px

.form-input
  display block
  height 25px
  width 300px
  color #555
  background-color #fff
  border 1px solid #ccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0,0,0,.075)


.label-control
  display block
  font-size 1.5rem

.form-button
  padding 10px 30px
  font-size 2rem
  border none
  border-radius 5px
  background-color $brand-primary
  color $white
