.navbar
  position relative
  min-height 50px
  margin-bottom 20px
  background-color #222
  font-size 1.5rem

  > a
    float left
    color lightgrey
    padding 15px 15px
    font-size 18px
    line-height 20px
    height 50px


  ul
    float left
    padding 0
    margin 0


    li
      float left
      position relative
      display block

      a
        color white
        position relative
        display block
        padding 15px
        line-height 20px


      &.active a
        background-color black


.right-navbar
  color: $white;
  float: right;
  padding: 15px;

.logout-btn
  cursor pointer
