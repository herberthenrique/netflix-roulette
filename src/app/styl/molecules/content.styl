

.content

  // Types
  // --------------------------------------------------

  h1, h2, h3, h4, h5, h6
    &:first-child
      margin-top 0

  > h1
    $font(h1, bold)
    margin-bottom $space-md


  > h2
    $font(h2, bold)
    margin-bottom $space
    margin-top $space-lg


  > h3
    $font(h3, bold)
    margin-bottom $space
    margin-top $space-lg


  > h4
    $font(h4, bold)
    margin-bottom $space-sm
    margin-top $space-lg


  > h5
    $font(h5, bold)
    margin-bottom $space-sm
    margin-top $space-lg

  > h6
    $font(h6, bold)
    margin-bottom $space-sm
    margin-top $space-lg


  > p
    $font(p1, light)


  > ol
    $font(p1, light)
    margin-bottom $space
    margin-left -40px
    margin-top $space-md

    li:not(:last-child)
      margin-bottom $space-sm


  > ul
    $font(p1, light)
    margin-bottom $space
    margin-left -40px
    margin-top $space-md

    li:not(:last-child)
      margin-bottom $space-sm
